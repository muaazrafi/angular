<div ng-controller="EventController">
  <div class="row">
    <div class="span4 well">
      <h2>{{event.name}}</h2>
      <span>{{event.date}}</span> : <span>{{event.time}}</span>
      <div class="clearfix"></div>
      <span>{{event.location.address}}</span> : <span>{{event.location.state}}</span>
    </div>
    <div class="clearfix"></div>
  </div>
  <hr/>
  <h2>Sessions</h2>
  <ul class="thumbnails">
    <li ng-repeat="session in event.sessions" >
        <div class="row session">
            <div class="span9 well">
              <div class="well-title">
                {{ session.name }}
              </div>
              <h6>{{ session.creator_name }}</h6>
              <span>{{ session.duration }}</span>
            </div>
        </div>
    </li>
  </ul>
</div>